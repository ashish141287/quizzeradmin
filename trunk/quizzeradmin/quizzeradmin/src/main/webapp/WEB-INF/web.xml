<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>Quizzer Admin</display-name>

	<!-- Servlets Name -->
	<servlet>
		<servlet-name>loginService</servlet-name>
		<servlet-class>com.tinesoft.quizzer.server.LoginServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>playerService</servlet-name>
		<servlet-class>com.tinesoft.quizzer.server.PlayerServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>categoryService</servlet-name>
		<servlet-class>com.tinesoft.quizzer.server.CategoryServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>questionService</servlet-name>
		<servlet-class>com.tinesoft.quizzer.server.QuestionServiceImpl</servlet-class>
	</servlet>
	<!-- Servlets Name -->
	
	<servlet-mapping>
		<servlet-name>loginService</servlet-name>
		<url-pattern>/quizzeradmin/loginService</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>playerService</servlet-name>
		<url-pattern>/quizzeradmin/playerService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>categoryService</servlet-name>
		<url-pattern>/quizzeradmin/categoryService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>questionService</servlet-name>
		<url-pattern>/quizzeradmin/questionService</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
